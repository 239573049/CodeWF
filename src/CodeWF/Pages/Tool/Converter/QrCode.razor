@page "/QrCode"
@inject IOptions<SiteOption> SiteOption

@code {
    [SupplyParameterFromQuery]
    public string? Title { get; set; }

    [SupplyParameterFromQuery]
    public string? Description { get; set; }

    [SupplyParameterFromQuery]
    public string? Button { get; set; }

    [SupplyParameterFromQuery]
    public string? Phone { get; set; }
}

<PageTitle>@Title - @SiteOption.Value.AppTitle</PageTitle>

<div class="container cl-container cl-post">
    <div>
        <CmsCard>
            
            @if (string.IsNullOrWhiteSpace(Title) || string.IsNullOrWhiteSpace(Phone))
            {
                <h1 class="invalid-page">ÎÞÐ§Ò³Ãæ</h1>
            }
            else
            {
                <h1 class="title">@Title</h1>
                <p>@Description</p>
                <a class="phone-link" href="tel:@Phone">@Button</a>
            }
        </CmsCard>
        <div style="height:20px;"></div>
    </div>
    <div>
        <UWebSiteCount />
        <div style="height: 20px;"></div>
        <UPostRank />
    </div>
</div>

<style>
    .invalid-page {
        font-size: 1.5rem;
        font-weight: bold;
        color: red;
        text-align: center;
        margin: 20px 0;
    }
    .title {
        font-size: 1.4rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        text-align: center;
    }
    .phone-link {
        display: block;
        font-size: 1.2rem;
        color: #FE5722;
        text-decoration: none;
        padding: 12px 20px;
        border: 1px solid #007bff;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        text-align: center;
        margin: 0 auto;
        max-width: 200px;
    }
    .phone-link:hover {
        background-color: #007bff;
        color: white;
    }
</style>
