@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <a href="/">
            CodeWF
        </a>
        <FluentSpacer />
        <_Searcher />
        <FluentSpacer Width="30" />
        <a href="https://github.com/dotnet9/codewf" target="_blank">
            Github
        </a>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://dotnet.microsoft.com/en-us/learn/aspnet/what-is-aspnet-core" target="_blank">
            Powered by .NET @Environment.Version
        </a>
        <FluentSpacer />
        <a href="https://codewf.com" target="_blank">
            CodeWF © 2024. All rights reserved.</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
